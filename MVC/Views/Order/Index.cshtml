@model IEnumerable<MVC.ViewModels.OrderVM>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<br />
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn-create" })
</p>
<br />
@using (Html.BeginForm("Index", "Order", FormMethod.Get))
{
    @Html.TextBox("query")
    <input type="submit" class="textcolor1" value="Search" />
}

<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BuyerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BuyerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Game.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn-edit" })  |
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn-details" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn-delete" })
            </td>
        </tr>
    }

</table>
